<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Buttons" parent="Theme.MaterialComponents.NoActionBar">
        <item name="backgroundTint" >@color/dark_red</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="TextView" parent="Theme.MaterialComponents.NoActionBar">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="logo" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Header" parent="Theme.MaterialComponents.NoActionBar">
        <item name="fontFamily">@font/timmana_regular</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Titles" parent="Theme.MaterialComponents.NoActionBar">
        <item name="fontFamily">@font/timmana_regular</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="textAboveBG" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Shape" parent="">
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="BottomNav" parent="">
        <item name="itemIconTint">@color/nav_item_bg</item>
        <item name="itemIconSize">20dp</item>
        <item name="itemPaddingTop">2dp</item>
        <item name="itemPaddingBottom">2dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomDateTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomWeekDayTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomHeaderTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Chip">
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">14sp</item>
        <item name="chipStrokeColor">@color/dark_red</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

</resources>