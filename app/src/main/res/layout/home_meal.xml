<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meal_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/MealHomeCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:elevation="4dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mealPhoto"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/fried_salmon_steak_cooked_green_600nw_2489026949" />

        <TextView
            android:id="@+id/mealNameHome"
            style="@style/textAboveBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom |center"
            android:background="@drawable/text_bg_screen_small"
            android:text="@string/meal_name"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>